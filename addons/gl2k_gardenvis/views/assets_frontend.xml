<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <!-- LOAD CSS AND JS FOR WEBSITE FRONTEND -->
        <!-- Load custom js and css -->
        <template id="assets_frontend" inherit_id="fso_base_website.assets_frontend" name="GL2K Gardenvis">
            <xpath expr="//script[last()]" position="after">

                <!-- Google Web Font, self-hosted -->
                <link href="/gl2k_config/static/src/css/fonts/nunitosans/nunitosans.css" rel="stylesheet"/>
                <link href="/gl2k_config/static/src/css/fonts/rubik/rubik.css" rel="stylesheet"/>
                
                <!-- Leaflet library -->
                <link rel="stylesheet" href='/gl2k_gardenvis/static/src/lib/leaflet/leaflet.css'/>
                <script type="text/javascript" src="/gl2k_gardenvis/static/src/lib/leaflet/leaflet-src.js"/>

                <!-- Simplified austrian GEO-JSON MAP stored in a java script variable called austriaGeoJsonMin -->
                <script type="text/javascript" src="/gl2k_gardenvis/static/src/js/austria_data/bundeslaender_und_gemeinden_min_4p.js"/>

                <!-- Leaflet nationalparkgarten-map css and js configuration -->
                <link rel="stylesheet" href='/gl2k_gardenvis/static/src/css/website_map.css'/>
                <script type="text/javascript" src="/gl2k_gardenvis/static/src/js/website_map_v5.js"/>

                <!-- Image gallery library fotorama -->
                <link rel="stylesheet" href='/gl2k_gardenvis/static/src/lib/fotorama-4.6.4/fotorama.css'/>
                <script type="text/javascript" src="/gl2k_gardenvis/static/src/lib/fotorama-4.6.4/fotorama.js"/>

                <!-- Image gallery for the leaflet map based on fotorama -->
                <link rel="stylesheet" href='/gl2k_gardenvis/static/src/css/website_map_image_gallery.css'/>
                <script type="text/javascript" src="/gl2k_gardenvis/static/src/js/website_map_image_gallery.js"/>

                <!-- Leaflet geocoding search plugin-->
                <link rel="stylesheet" href='/gl2k_gardenvis/static/src/lib/leaflet-geosearch/dist/geosearch.css'/>
                <script type="text/javascript" src="/gl2k_gardenvis/static/src/lib/leaflet-geosearch/dist/geosearch.umd.js"/>

                <!--  DYNAMIC WEB FORM (fso_form) for nationalparkgarten subscription -->
                <link rel="stylesheet" href='/gl2k_gardenvis/static/src/css/npg_fso_form_dynamic.css'/>
                <script type="text/javascript" src="/gl2k_gardenvis/static/src/js/npg_fso_form_dynamic.js"/>

            </xpath>
        </template>

</data>
</openerp>
